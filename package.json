{
  "name": "typing-tool",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vite build && npm run copy-assets",
    "preview": "vite preview",
    "lint": "eslint . --ext .vue,.js,.ts,.jsx,.tsx",
    "copy-assets": "sh bin/clear_assets.sh && cp dist/index.html . && cp dist/css/* css/ 2>/dev/null; cp dist/js/* js/ 2>/dev/null; true"
  },
  "dependencies": {
    "core-js": "^3.6.5",
    "es6-promise": "^4.2.8",
    "pascal-case": "^3.1.2",
    "ramda": "^0.27.1",
    "vue": "^3.5.25",
    "vue-head": "^2.2.0",
    "vue-loader": "^16.2.0",
    "vuex": "^4.0.0",
    "vuex-persistedstate": "^4.0.0-beta.1",
    "xml2js": "^0.4.23"
  },
  "devDependencies": {
    "@types/node": "^24.10.1",
    "@types/ramda": "^0.31.1",
    "@types/xml2js": "^0.4.14",
    "@typescript-eslint/eslint-plugin": "^8.48.0",
    "@typescript-eslint/parser": "^8.48.0",
    "@vitejs/plugin-vue": "^6.0.2",
    "@vitejs/plugin-vue-jsx": "^5.1.2",
    "@vue/compiler-sfc": "^3.0.0-beta.1",
    "babel-eslint": "^10.1.0",
    "eslint": "^8.57.1",
    "eslint-plugin-vue": "^7.0.0-alpha.0",
    "sass": "^1.94.2",
    "sass-loader": "^10.1.0",
    "typescript": "^5.9.3",
    "vite": "^7.2.4"
  },
  "eslintConfig": {
    "root": true,
    "env": {
      "browser": true,
      "es2021": true,
      "node": true
    },
    "extends": [
      "plugin:vue/vue3-essential",
      "eslint:recommended"
    ],
    "parser": "vue-eslint-parser",
    "parserOptions": {
      "ecmaVersion": 2020,
      "sourceType": "module",
      "parser": "@typescript-eslint/parser"
    },
    "plugins": [
      "vue",
      "@typescript-eslint"
    ],
    "rules": {
      "vue/no-v-html": "warn",
      "vue/no-multiple-template-root": "off",
      "no-unused-vars": "off"
    }
  },
  "browserslist": [
    "> 1%",
    "last 2 versions",
    "not dead"
  ]
}
